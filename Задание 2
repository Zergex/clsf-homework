a = 'abcrotm'
b = 'tro'

def check_inv(a, b):
        s0=set(b) 
        for j in range(len(a)-len(b)+1):
            s=set(a[j:j+len(b)])
            if(s==s0):
                return True
            else:
                if j==len(a)-len(b):
                    return False
                  
check_inv(a, b)
